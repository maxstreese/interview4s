{
  "image": "ghcr.io/maxstreese/devcontainer4s:latest",
  "extensions": [
    "EditorConfig.EditorConfig",
    "MS-vsliveshare.vsliveshare-pack",
    "scala-lang.scala",
    "scalameta.metals",
    "vscjava.vscode-java-pack"
  ],
  "settings": {
    "java.configuration.runtimes": [
      {
        "name": "JavaSE-11",
        "path": "/root/.jdk/11",
        "default": true
      }
    ],
    "java.home": "/root/.jdk/11",
    "metals.ammoniteJvmProperties": [
      "-Xmx1G"
    ],
    "metals.serverProperties": [
      "-Xmx1G"
    ],
    "metals.bloopSbtAlreadyInstalled": true,
    "metals.javaHome": "/root/.jdk/11",
    "files.watcherExclude": {
        "**/target": true
    }
  }
}
